{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "types": ["node"],

    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules.old",
    ".next",
    ".next.old",
    "out",
    "dist",
    "build",
    "ios",
    "android",
    "temp-cleanup"
  ]
}
